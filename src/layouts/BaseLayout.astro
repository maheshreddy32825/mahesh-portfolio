---
const { children, title, description } = Astro.props;
---
<html lang="en" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title ? `${title} · Your Name` : 'Your Name'}</title>
    <meta name="description" content={description || "Your short tagline"} />
    <link rel="icon" href="/assets/favicon.ico" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white text-slate-800 dark:bg-slate-900 dark:text-slate-100 font-sans">
    <div class="min-h-screen max-w-5xl mx-auto px-6 py-12">
      
      <!-- Header -->
      <header class="flex items-center justify-between mb-12">
        <a href="/" class="text-2xl font-bold hover:text-indigo-600 transition">Your Name</a>
        <nav class="space-x-6 text-sm font-medium">
          <a href="/about/" class="hover:text-indigo-600">About</a>
          <a href="/projects/" class="hover:text-indigo-600">Projects</a>
          <a href="/blog/" class="hover:text-indigo-600">Blog</a>
          <a href="/resume.pdf" target="_blank" class="hover:text-indigo-600 transition">Resume</a>
        </nav>
      </header>

      <!-- Main Content -->
      <main class="space-y-12">
        {children}
      </main>

      <!-- Footer -->
      <footer class="mt-16 text-sm text-slate-500 text-center">
        © {new Date().getFullYear()} Your Name — Built with Astro + Tailwind
      </footer>
    </div>

    <!-- Optional: Dark mode toggle script -->
    <script>
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </body>
</html>
